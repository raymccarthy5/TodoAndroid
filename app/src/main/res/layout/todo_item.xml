<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"  android:layout_margin="22dp">

    <CheckBox
        android:id="@+id/checkbox_box_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:onClick="updateCheck"
        android:minHeight="0dp"
        android:text="0"
        android:textColor="@color/white"
        android:layout_alignParentStart="true"/>

    <TextView

            android:id="@+id/todo_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/delete_box"
        tools:text="Example Item"
        android:onClick="navigateToEditText"
        android:maxLines="1"
        android:clickable="true"
        android:ellipsize="end"
        android:textSize="20dp"
        android:layout_marginLeft="6dp"
        android:layout_toEndOf="@id/checkbox_box_completed"
        android:layout_alignTop="@id/checkbox_box_completed"
        android:layout_alignBottom="@id/checkbox_box_completed"
        android:gravity="center_vertical"
        />
    <ImageView
        android:onClick="deleteItem"
        android:tooltipText="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delete_box"
        android:src="@drawable/baseline_delete_24"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>


